@model GenerateDummyDataViewModel

@{
    ViewData["Title"] = "Create";
}

<h4>Dummy Data</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="GenerateDummyData">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DummyDataCount" class="control-label"></label>
                <input asp-for="DummyDataCount" class="form-control" />
                <span asp-validation-for="DummyDataCount" class="text-danger"></span>
            </div>          
            <div class="form-group">
                <input type="submit" value="Generate" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
