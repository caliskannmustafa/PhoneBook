@model ContactInfoViewModel

@{
    ViewData["Title"] = "Create";
}

<h4>ContactInfo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateContact">
            @Html.Hidden("Id", (int)ViewBag.PersonId)
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ContactType" class="control-label"></label>
                <select asp-for="ContactType" class="form-control" asp-items="ViewBag.ContactType"></select>
                <span asp-validation-for="ContactType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Value" class="control-label"></label>
                <input asp-for="Value" class="form-control" />
                <span asp-validation-for="Value" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@ViewBag.PersonId">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
